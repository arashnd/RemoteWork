<div class = "container">
  <div class="row">
    <div class="col-8 offset-2">
      <%= form_with model: [:clients, @job] do |f| %>
        <div class="card border-0" style="">
          <div class="card-body">
            <h3>New Job</h3>
            <%= link_to("<< Back to List", clients_jobs_path, class: "btn btn-secondary btn-sm") %><div><br><b></b></div>
            <h5 class="card-title">New Job</h5>

            <div class="card-text">
              <%= render(:partial => 'form', :locals => {:f => f}) %>

              <div class="form-group row">
                <div class=" offset-sm-2 col-sm-5">
                  <%= f.submit 'Create', class: "btn btn-primary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>



