<div class="container" xmlns="http://www.w3.org/1999/html">
  <div class="row">
    <div class="col-2" data-controller="image-preview">
      <div class="text-center">

          <% if resource.image.attached? %>
          <%= image_tag resource.image, class: "w-100", alt: "profile image", data: {target: 'image-preview.image'} %>
          <% else %>
          <i class="fas fa-user-circle fa-5x" ></i>
          <% end %>

      </div>
      <div class=" mt-3 text-center">
        <label class="btn btn-dark btn-sm"> Upload Image
          <%= f.file_field :image, class: "d-none", data: {action: 'change->image-preview#preview'} %>
        </label>
        <%#= link_to("Change", '') %>
      </div>
    </div>


    <div class="col-10">
      <div class="row">
        <div class="col-2">
          <%= f.label :first_name %>
        </div>
        <div class="col-4">
          <%= f.text_field :first_name,  class: "form-control" %>
        </div>
        <div class="col-2">
          <%= f.label :last_name %>
        </div>
        <div class="col-4">
          <%= f.text_field :last_name,  class: "form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-2">
          <%= f.label :Email %>
        </div>
        <div class="col-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-2">
          <%= f.label :phone_Number %>
        </div>
        <div class="col-4">
          <%= f.phone_field :phone, class: "form-control", placeholder: "Phone Number" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-2">
          <%= f.label :designation %>
        </div>
        <div class="col-10">
          <%= f.text_field :designation,   class: "form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-2">
          <%= f.label :Overview %>
        </div>
        <div class="col-10">
          <%= f.text_area :overview, rows: 4,   class: "form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-2">
          <%= f.label :Skills %>
        </div>
        <div class="col-10">
          <%= f.select :skill_ids,  Skill.pluck(:name, :id), {}, multiple: true,  class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        </div>
        <div class="col-6">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="col-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-6">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        </div>
        <div class="col-6">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-4">
          <h3>Cancel my account</h3>
        </div>
        <div class="col-4 actions">
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
        </div>
        <div class="col-4 actions">
          <%= f.submit "Update", class: 'btn btn-primary px-5 ml-5' %>
        </div>
      </div>
    </div>
  </div>
</div>
