<div class="container mt-5">
    <div class="card border-0">
      <div class="card-header bg-white"><h5 class="w-50 float-left">Edit <%= resource_name.to_s.humanize %></h5>
        <div class=" w-50 text-right float-right">
          <% if freelancer_signed_in? %>
            <%= link_to   freelancer_path(resource.id) do %>
               View <i class="fas fa-eye"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="card-content">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= render(:partial => resource_name.to_s.downcase, :locals => {:f => f})   %>
          <% end %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <%= link_to "Back", :back, class: 'btn btn-dark btn-sm' %>
      </div>
    </div>
</div>


